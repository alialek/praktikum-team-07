{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "rimraf ./dist ./*.tsbuildinfo && cross-env NODE_ENV=production tsc --p ./tsconfig.prod.json",
    "start": "cross-env NODE_ENV=production node -r ts-node/register/transpile-only -r tsconfig-paths/register ./dist/index.js",
    "start:docker": "cross-env CURRENT_USER=$(id -u):$(id -g) docker compose -f ../../docker-compose.yml up -d",
    "preview": "yarn start",
    "dev": "yarn dev:postgres && yarn dev:server",
    "dev:server": "cross-env NODE_ENV=development nodemon -e ts,js --exec ts-node -r tsconfig-paths/register ./src/index.ts",
    "dev:postgres": "cross-env CURRENT_USER=$(id -u):$(id -g) NODE_ENV=development docker compose -f ../../docker-compose.dev.yml up postgres -d",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "jest ."
  },
  "dependencies": {
    "cors": "2.8.5",
    "csp-header": "5.1.0",
    "dotenv": "16.0.2",
    "eslint-config-prettier": "8.5.0",
    "express": "4.18.1",
    "express-async-errors": "3.1.1",
    "helmet": "6.0.1",
    "http-status-codes": "2.2.0",
    "merge-options": "3.0.4",
    "morgan": "1.10.0",
    "pg": "8.8.0",
    "prettier": "2.7.1",
    "psl": "1.9.0",
    "reflect-metadata": "0.1.13",
    "sequelize": "6.28.0",
    "sequelize-typescript": "2.1.5"
  },
  "devDependencies": {
    "@types/cors": "2.8.12",
    "@types/express": "4.17.13",
    "@types/jest": "28.1.8",
    "@types/morgan": "1.9.3",
    "@types/pg": "8.6.5",
    "@types/psl": "1.1.0",
    "@typescript-eslint/eslint-plugin": "5.35.1",
    "@typescript-eslint/parser": "5.35.1",
    "babel-jest": "29.0.1",
    "cross-env": "7.0.3",
    "eslint": "8.23.0",
    "jest": "28",
    "nodemon": "2.0.19",
    "prettier": "2.7.1",
    "ts-jest": "28.0.8",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.1",
    "typescript": "4.8.2"
  },
  "license": "MIT"
}
